generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ===================== Database models =====================

// Enums added to align with UI states and types
enum ReservationStatus {
  pending
  confirmed
  completed
  cancelled
}

enum NotificationType {
  NEW_RESERVATION
  CANCEL_RESERVATION
  LOW_STOCK
  SYSTEM
  UPDATE
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String // Khai vị, Món chính, Tráng miệng
  slug   String @unique
  order  Int    @default(0)
  dishes Dish[]
}

model Dish {
  id             Int      @id @default(autoincrement())
  categoryId     Int
  name           String
  slug           String   @unique
  description    String?  @db.Text // Unified description used in add/edit dish UI
  meaning        String?  @db.Text
  ingredients    String?  @db.Text
  accompaniments String?  @db.Text
  imageUrl       String?  @db.LongText // Changed to LongText to support base64 encoded images
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  category       Category @relation(fields: [categoryId], references: [id])
  notifications  Notification[]
  setItems       SetMenuDish[]
}

model Gallery {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  caption   String?
  type      String // "space" | "food" | "event"
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id          Int      @id @default(autoincrement())
  name        String   @unique // e.g., "B1", "B6", "C1"
  type        String   // "table-2" | "table-4" | "table-large"
  capacity    Int      // 2, 4, 6+
  area        String   // "quiet" | "view" | "private"
  positionTop String?  // CSS top position (e.g., "5%")
  positionBottom String? // CSS bottom position (e.g., "10%")
  positionLeft String  // CSS left position (e.g., "5%")
  shape       String   // "square" | "rounded" | "circle"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reservations Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  code      String   @unique // Reservation code displayed to customer (e.g., HQ17195)
  name      String
  phone     String
  email     String?
  date      DateTime
  people    Int
  tableId   Int?     // Selected table from step 2
  message   String?  @db.Text // Special requests from step 3
  status    ReservationStatus @default(pending)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  table     Table?   @relation(fields: [tableId], references: [id])
  notifications Notification[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RestaurantInfo {
  id           Int     @id @default(1)
  name         String  @default("Hương Quê")
  address      String
  phone        String
  email        String
  openHours    String
  about        String  @db.LongText
  mission      String  @db.LongText
  vision       String  @db.LongText
  setMenuPrice Decimal @default(2500000)
  themeMode    String  @default("light") // UI theme selection (light | dark)
  updatedAt    DateTime @updatedAt
}

// Notifications for the notification center UI
model Notification {
  id          Int             @id @default(autoincrement())
  type        NotificationType
  title       String
  message     String  @db.Text
  read        Boolean @default(false)
  createdAt   DateTime @default(now())
  readAt      DateTime? // When marked as read
  // Optional foreign keys if future linking is needed
  reservationId Int?    // Link to Reservation for NEW/CANCEL events
  dishId        Int?    // Link for LOW_STOCK or dish-related events
  reservation   Reservation? @relation(fields: [reservationId], references: [id])
  dish          Dish?        @relation(fields: [dishId], references: [id])
  @@index([type])
  @@index([read])
  @@index([createdAt])
}

// ===================== Set Menu models =====================

model SetMenu {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?  @db.Text
  price       Int      // VNĐ total price for the set
  servesMin   Int?     // e.g., 4
  servesMax   Int?     // e.g., 6
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sections    SetMenuSection[]
}

model SetMenuSection {
  id        Int      @id @default(autoincrement())
  setMenuId Int
  name      String   // Khai vị, Món chính, Tráng miệng
  order     Int      @default(0)
  setMenu   SetMenu  @relation(fields: [setMenuId], references: [id])
  items     SetMenuDish[]
}

model SetMenuDish {
  id              Int      @id @default(autoincrement())
  setMenuSectionId Int
  dishId          Int
  notes           String?  @db.Text // Optional notes like substitutions
  quantity        Int?     // Optional quantity per set
  order           Int      @default(0)
  section         SetMenuSection @relation(fields: [setMenuSectionId], references: [id])
  dish            Dish           @relation(fields: [dishId], references: [id])
  @@unique([setMenuSectionId, dishId])
}
